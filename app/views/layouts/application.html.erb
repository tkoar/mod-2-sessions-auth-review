<!DOCTYPE html>
<html>
  <head>
    <title>GithubFeelings</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
  </head>

  <body>
    <div class="ui menu">
      <% if signed_in %>
        <%= link_to "My Profile", user_path(current_user), class: 'header item' %>
        <%= link_to "Programs", programs_path, class: 'item' %>
        <%= link_to "Homepage", root_path, class: 'item' %>
      <% end %>
      <div class="right menu">
        <% if signed_in %>
          <div class="item"><%= link_to "Logout", logout_path, class: 'ui button'%></div>
        <% else %>
          <div class="item"><%= link_to "Homepage", root_path, class: 'item' %></div>
          <div class="item"><%= link_to "Signup", sign_up_path, class: 'ui button'%></div>
          <div class="item"><%= link_to "Sign in", signin_path, class: 'ui button'%></div>
        <% end %>
      </div>
    </div>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
